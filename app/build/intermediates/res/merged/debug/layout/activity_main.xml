<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.resses.thistym.MainActivity">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="learn more about leaves and plants"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="74dp"
            android:text="CAMERA"
            android:textSize="25dp"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView" />

        <Button
            android:id="@+id/b2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LEAF GAME"
            android:textSize="25dp"
            android:layout_marginTop="33dp"
            android:layout_below="@+id/b1"
            android:layout_alignLeft="@+id/b1"
            android:layout_alignStart="@+id/b1"
            android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView" />

        <Button
            android:id="@+id/b3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/b2"
            android:layout_alignRight="@+id/b2"
            android:layout_below="@+id/b2"
            android:layout_marginTop="69dp"
            android:text="saved data"
            android:textSize="25dp"
            android:layout_alignLeft="@+id/b2"
            android:layout_alignStart="@+id/b2" />

        <Button
            android:id="@+id/b4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gallery"
            android:textSize="25dp"
            android:layout_alignBottom="@+id/b1"
            android:layout_toRightOf="@+id/b1"
            android:layout_marginLeft="41dp"
            android:layout_marginStart="41dp"
            android:layout_alignRight="@+id/b2"
            android:layout_alignEnd="@+id/b2"
            android:layout_alignTop="@+id/b1" />


    </RelativeLayout>



